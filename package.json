{
  "name": "@olddude/minecraft-mcp-server",
  "version": "0.1.0",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "minecraft-mcp-server": "index.js"
  },
  "types": "types.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olddude/minecraft-mcp-server.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@olddude:registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "minecraft",
    "mcp",
    "server",
    "modelcontextprotocol",
    "mcrcon"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . -c eslint.config.mjs --ignore-pattern dist",
    "lint:fix": "npm run lint -- --fix",
    "test:ci": "jest --detectOpenHandles --coverage",
    "test": "npm run test:ci -- --watch",
    "build": "node -r dotenv/config esbuild.config.mjs",
    "start:debug": "node --inspect=0.0.0.0:9229 -r dotenv/config -r ts-node/register index.ts",
    "start:release": "node -r dotenv/config dist/index.js",
    "start": "nodemon",
    "inspector": "mcp-inspector"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "vec3": "^0.1.8",
    "yargs": "^18.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/vec3": "^0.0.29",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.14.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}